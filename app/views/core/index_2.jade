mixin rowTitle(title)
  tr
    td.title(colspan="17"): strong!=title
mixin rowContent(obj)
  tr(class=obj.clss, attributes)
    - if (obj.clss === "template") {
      td.number!=obj.no
      td.psd!=obj.psd
      td.file: a(href="obj.href", title="")!=obj.link
    - } else {
      td(colspan="3")!=obj.comment
    - }
    td.status!=obj.stt
    td.date!=obj.date
    td.validated!=obj.vIE
    td.validated!=obj.vFirefox
    td.validated!=obj.vChrome
    td.validated!=obj.vSafari
    td.validated!=obj.vOpera
    td.validated!=obj.vIOS
    td.validated!=obj.vAndroid
    td.validated!=obj.vWindowsphone
    td.validated!=obj.vPixelPerfect
    td.validated!=obj.vW3Schools
    td.staff!=obj.Staff
    td.checked!=obj.Checked

