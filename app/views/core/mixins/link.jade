mixin link(icon, title, href, text)
  - if (typeof(href) === "undefined") href="#"
  - if (typeof(text) === "undefined") text=title;
  - if (!icon){
      a(href="#{href}", title="#{title}")&attributes(attributes)!=text
  - }else if(text != ""){
      a(href="#{href}", title="#{title}")&attributes(attributes)
        span(class="#{icon}"):=title
        span!=text
  - }else{
      a(href="#{href}", title="#{title}")&attributes(attributes)
        span(class="#{icon}"):=title
  - }