include ../core/mixins/all

block variables

- if(typeof bodyClass === "undefined"){ bodyClass = null }
- if(typeof title     === "undefined"){ title     = "Mighty Made" }
- if(typeof appcache  === "undefined"){ appcache  = null }

doctype html
//[if IE 8]><html lang="fr" class="no-js old-ie ie8"><![endif]
//[if IE 9]><html lang="fr" class="no-js old-ie ie9"><![endif]
//[if gt IE 9]><!
html(class="no-js", lang="en", appcache=appcache)
  //<![endif]

  head

    meta(charset="utf-8")
    title!=title

    //[if lt IE 9]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]

    meta(name="description", content="")
    meta(name="viewport", content="user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, width=1024")

    // build:js javascripts/libs/modernizr.min.js
    script(src="javascripts/libs/modernizr.js")
    // endbuild

    script(src="javascripts/app.js")

    // build:css stylesheets/app.min.css
    link(rel="stylesheet", href="stylesheets/app.css")
    // endbuild

    // build:css stylesheets/app-header.min.css
    link(rel="stylesheet", href="stylesheets/app-header.css")
    // endbuild

    // build:css stylesheets/app-footer.min.css
    link(rel="stylesheet", href="stylesheets/app-footer.css")
    // endbuild

    block modules-css

  body(class=bodyClass)
    #no-portrait
      p Please view in landscape mode
    #app
      include ../app-bg-content/index
      block btn-frame
        include ../app-icon-frame/index
      #main-app
        block header

        block body-content

        block footer
        +popin(0, "Ce bouton est un lien retour vers le dashboard")(class="popup-board")
        #overlay

    // build:js javascripts/libs/vendor.min.js
    script(src="javascripts/libs/vendor.js")
    // endbuild

    // build:js javascripts/core.min.js
    script(src="javascripts/core.js")
    // endbuild

    //- -----------------------------------------
    //- Uncomment the following scripts if your
    //- header and/or footer has javascript files
    //- -----------------------------------------

    //- // build:js javascripts/app-header.min.js
    //- script(src="javascripts/app-header.js")
    //- // endbuild

    //- // build:js javascripts/app-footer.min.js
    //- script(src="javascripts/app-footer.js")
    //- // endbuild

    //---------------------------------------------
    //- DO NOT INCLUDE ALL THE MODULES SCRIPTS HERE
    //- They should be called separately on
    //- concerned pages. Put them inside a block
    //- called `modules-js`
    //---------------------------------------------

    block modules-js
